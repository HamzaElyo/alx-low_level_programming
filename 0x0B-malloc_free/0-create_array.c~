#include <stdlib.h>
#include "main.h"
/**                                                                                       
 * create_array - function that creates array                                             
 * @size: size of the array                                                               
 * @c: char to be initialized                                                             
 */
char *create_array(unsigned int size, char c)
{
  if(size == 0)
    return NULL;
  if(size > 0)
    {
      unsigned int i;
      char *arr;
      arr = malloc(size);
      for(i = 0; i < size; i++)
	arr[i] = c;
      if(arr != NULL)
	return arr;
      else
	return NULL;
    }
}
